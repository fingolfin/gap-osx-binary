# General makefile for GAP4 cohomolo package -
# all executables are put into the bin directory.
SHELL = /bin/sh
BIN = bin/@GAPARCH@
RM = /bin/rm

CC=gcc
CFLAGS = -O

targets: gap

# this target creates a bin-directory
bindir:
	if test ! -d bin;  then mkdir bin;  fi
	if test ! -d bin/@GAPARCH@;  then mkdir bin/@GAPARCH@;  fi


gap: bindir
	cd standalone/progs.d;\
	$(MAKE) CC="$(CC)" BIN="..//..//$(BIN)" COPTS="$(COPTS)"

clean:
	cd standalone/progs.d; $(MAKE) clean

distclean:
	cd standalone/progs.d; $(MAKE) clean
	$(RM) -f $(BIN)/*
