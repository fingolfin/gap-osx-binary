#
#    Cartan matrix:
#
#        [ 2, -1, 0, 0 ]
#        [ -1, 2, -1, 0 ]
#        [ 0, -2, 2, -1 ]
#        [ 0, 0, -1, 2 ]
#
< e1, e2, e3, e4 |
    [ e2, e1, e1 ],
    [ e1, e2, e2 ],
    [ e3, e1 ],
    [ e4, e1 ],
    [ e3, e2, e2 ],
    [ e2, e3, e3, e3 ],
    [ e4, e2 ],
    [ e4, e3, e3 ],
    [ e3, e4, e4 ],
#   additional relation:
    [ e3, e2, e1, e2 ]
 >
