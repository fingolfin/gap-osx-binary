if [ -z "$1" ] || ! [ -f "$1.txt" ] 
then
	echo "Usage $0 <file>"
	echo "Where file does not contain the extension (.g or .gi[id])" 
	exit 1;
fi

echo "gap> START_TEST(\"$1\");" >"$1".test
cat "$1".txt >>"$1".test
echo >>"$1".test
echo "gap> STOP_TEST(\"$1.g\",10000);" >>"$1".test
